      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-control mb-3">
    <%= form.label 'Título' %>
    <%= form.text_field :title %>
  </div>

  <div class="field form-control mb-3">
    <%= form.label 'Autor' %>
    <%= form.text_field :author %>
  </div>

  <div class="field form-control mb-3">
    <%= form.label 'Estado' %>
    <%= form.select :status, Book.statuses.keys %>
  </div>

  <div class="field form-control mb-3">
    <%= form.label 'Prestado a' %>
    <%= form.text_field :borrower %>
  </div>

  <div class="field form-control mb-3">
    <%= form.label 'Fecha de préstamo' %>
    <%= form.date_field  :borrowed_at %>
  </div>

  <div class="field form-control mb-3">
    <%= form.label 'Fecha de devolución' %>
    <%= form.date_field :returned_at %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar' %>
  </div>
<% end %>
